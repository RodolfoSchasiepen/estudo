import Forca
import adivinhacao


def choose_game():
    #cabecario
    print("**************************")
    print("****Escolha o seu jogo****")
    print("**************************")

    print("(1) Forca (2) Adivinhacao")


    jogo = int(input("Qual o jogo?"))

    if (jogo == 1):
        print("Jogo da forca")
        Forca.play()
    elif (jogo == 2):
        print("Jogo da adivinhacao")
        adivinhacao.play()

if(__name__ == "__main__"):
    choose_game()
